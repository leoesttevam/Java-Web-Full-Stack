package executavel;

import OrientacaoObj.Aluno;

public class ExecutavelAluno {
	
	//Main é um metodo auto executavel em Java.
	public static void main(String[] args) {
		
		//Objeto ainda não existe na memoria.
		//Aluno aluno;
		
		
		//aluno1 é uma referencia para o objeto Aluno
		//new Aluno() é uma instancia (Criação de Objeto)
		//Agora temos um objeto real na memoria pois ele está iniciado pelo new.
		Aluno aluno1 = new Aluno();//Aqui será o João
		aluno1.setNome("João Damasceno");
		aluno1.setIdade(19);
		aluno1.setDataNascimento("17/09/2003");
		aluno1.setRegistroGeral("4598378-SP");
		aluno1.setNumeroCpf("44444-65673-98567-3");
		aluno1.setNomeMae("Maria");
		aluno1.setNomePai("José");
		aluno1.setDataMatricula("16/01/2017");
		aluno1.setNomeEscola("E.M. Emilio Matarrazo");
		aluno1.setSerie("3 ANO");
		aluno1.setNota1(6.5);
		aluno1.setNota2(5.3);
		aluno1.setNota3(7.0);
		aluno1.setNota4(7.6);
		System.out.println("Nome do aluno: " + aluno1.getNome());
		System.out.println("Idade do aluno: " + aluno1.getIdade());
		System.out.println("Data nascimento: " + aluno1.getDataNascimento());
		System.out.println("Registro geral: " + aluno1.getRegistroGeral());
		System.out.println("CPF: " + aluno1.getNumeroCpf());
		System.out.println("Nome da mãe: " + aluno1.getNomeMae());
		System.out.println("Nome do pai: " + aluno1.getNomePai());
		System.out.println("Data da matricula: " + aluno1.getDataMatricula());
		System.out.println("Escola: " + aluno1.getNomeEscola());
		System.out.println("Serie: " + aluno1.getSerie());
		System.out.println();
		System.out.println("Media do aluno: " + aluno1.getNome() + " é: " + aluno1.getMediaNota());
		
	}
}
